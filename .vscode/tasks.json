    {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "build current lab",
                "type": "shell",
                "command": "cd ${workspaceFolder} && cmake . -B build && cmake --build build",
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": [
                    "$gcc"
                ]
            },
            {
                "label": "rebuild current lab",
                "type": "shell",
                "command": "cd ${workspaceFolder} && rm -rf build/* && cmake . -B build && cmake --build build",
                "group": "build",
                "problemMatcher": [
                    "$gcc"
                ]
            },
            {
                "label": "clean",
                "type": "shell",
                "command": "cd ${workspaceFolder} && rm -rf build/*",
                "group": "build",
                "problemMatcher": []
            }
        ]
    }